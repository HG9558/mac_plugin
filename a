export const number: Directive = {
  mounted(el: HTMLInputElement, binding: DirectiveBinding) {
    const maxLen = binding.value ?? MAX_INPUT_NUMBER_LENGTH;
    useEventListener(el, 'input', (e) => {
      let inputValue = (e.target as HTMLInputElement).value;
      if (+inputValue === 0) return;

      inputValue = inputValue.replace(/\D/g, '').replace(/^0{1,}/g, '').slice(0, maxLen);
      // 获取组件实例
      const vm = binding.instance;

      // 更新 modelValue，手动触发 input 事件
      vm?.$emit('update:modelValue', inputValue);
      vm?.$emit('input', inputValue);
      // 使用 v-model 更新 form.level
    });
  },
};


报错信息

[Vue warn]: Component emitted event "update:modelValue" but it is neither declared in the emits option nor as an "onUpdate:modelValue" prop.
warn2 @ runtime-core.esm-bundler.js:41
emit @ runtime-core.esm-bundler.js:621
